---
const { resourceTitle, resourceLink } = Astro.props;
const { date } = Astro.props;
const { imageSrc } = Astro.props;
---

<article
    class="max-w-xs mx-auto bg-black mt-3 mb-4 rounded-lg overflow-hidden shadow-md border border-black-200 relative flex flex-col"
    style="height: 400px; width: 230px;"
>
    <a
        href={resourceLink}
        target="_blank"
        class="group block flex-grow relative"
    >
        <div class="absolute inset-0 bg-black opacity-50"></div>
        <img
            class="object-cover w-full h-full"
            src={imageSrc}
            alt={resourceTitle}
        />
        <div
            class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity"
        >
            <div class="bg-white bg-opacity-75 p-4 rounded-full">
                <svg
                    class="w-12 h-12 text-black cursor-pointer"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 4l15 8-15 8V4z"></path>
                </svg>
            </div>
        </div>
    </a>
    <div class="p-3 text-white">
        <h1 class="text-sm font-semibold mb-2">{resourceTitle}</h1>
        <div class="mt-auto">
            <div class="flex items-center">
                <svg
                    class="w-4 h-4 text-gray-500 mr-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 12h14M12 5l7 7-7 7"></path>
                </svg>
                <span class="text-xs">{date}</span>
            </div>
            <div class="mt-2">
                <a
                    href={resourceLink}
                    class="text-blue-500 hover:text-blue-700 text-sm"
                    target="_blank">Ir al recurso</a
                >
            </div>
        </div>
    </div>
</article>

<style>
    .max-w-xs {
        transition: transform 0.2s;
    }

    .max-w-xs:hover {
        transform: scale(1.1);
    }
</style>
