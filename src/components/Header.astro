---
import ProfileImage from "./../../public/profile.jpeg";
---

<link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
/>

<header>
    <div class="image-profile-container">
        <div class="image-profile">
            <img src={ProfileImage.src} alt="Profile Image" />
        </div>
    </div>
    <div class="profile-info">
        <div class="name-follow">
            <div>
                <h1 class="text-2xl font-bold">Hola ðŸ‘‹ soy Alejo</h1>
            </div>
            <div class="follow-button">
                <a
                    href="https://www.instagram.com/alejandro_llanganate/"
                    target="_blank"
                    class="astro-button bg-gradient-to-r from-blue-400 to-cyan-500 text-white font-semibold py-2 px-4 rounded-full focus:outline-none focus:ring focus:border-blue-300 transform transition hover:scale-105"
                >
                    Seguir
                </a>
            </div>
        </div>
        <div>
            <ul>
                <li>Soy Ingeniero de Software</li>
                <li>Bievenido a mi blog ðŸ˜Š</li>
                <li>Te comparto mis apuntes en ðŸ‘‡</li>
            </ul>
        </div>
        <div class="flex space-x-4">
            <a
                href="https://notes.alejandrollanganate.com"
                target="_blank"
                class="text-blue-500 hover:text-blue-700"
            >
                notes.alejandrollanganate.com
            </a>
        </div>
    </div>
</header>

<style>
    header {
        display: flex;
        justify-content: center;
        background-color: white;
        border-bottom: 1px solid rgb(237, 237, 237);
        width: 70%;
        padding: 4rem 2rem 3rem 2rem;
        flex-wrap: wrap;
        margin-top: -1rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    }

    .image-profile-container {
        padding-right: 4rem;
        position: relative;
        flex: 2;
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }

    .image-profile {
        width: 8rem;
        height: 8rem;
        border-radius: 5rem; /* Adjusted to account for padding */
        background: linear-gradient(45deg, #ffcc00, #ff009d, #bc00bc);
        padding: 0.2rem;
        box-sizing: border-box;
    }

    .image-profile img {
        width: 100%;
        height: 100%;
        border-radius: 5rem; /* Adjusted to account for padding */
        object-fit: cover;
    }

    .profile-info {
        flex: 3;
    }

    .name-follow {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-between;
        width: 23rem;
    }

    @media (max-width: 1024px) {
        header {
            width: 85%;
        }
    }

    @media (max-width: 768px) {
        header {
            width: 90%;
        }

        .image-profile-container {
            padding-right: 0rem;

            flex: 2;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .name-follow {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            justify-content: space-between;
            width: 100%;
        }
    }

    @media (max-width: 640px) {
        header {
            width: 90%;
        }
        .name-follow {
            display: flex;
            flex-direction: column-reverse;
            align-items: flex-start;
            flex-wrap: wrap;
            width: 100%;
        }

        .follow-button {
            margin: 1rem 0rem;
        }
    }

    @media (max-width: 469px) {
        header {
            width: 90%;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .follow-button {
            display: flex;
            justify-content: center;
            width: 100%;
        }
    }
</style>
