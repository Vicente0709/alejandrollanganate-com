---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
---

<Layout title="Fotografía">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Fotografía</Fragment>
      <Fragment slot="desc">
        <p class="text-lg leading-relaxed text-slate-500">
          Bienvenido a la galería de fotografías. Disfruta de una selección de
          imágenes que capturan momentos especiales.
        </p>
      </Fragment>
    </Sectionhead>

    <div class="carousel-container">
      <div class="carousel">
        <img src="https://i.ibb.co/hCvjYtk/m6.jpg/" alt="Image 1" />
        <img src="path/to/image2.jpg" alt="Image 2" />
        <img src="path/to/image3.jpg" alt="Image 3" />
        <!-- Añade más imágenes según sea necesario -->
      </div>
    </div>
  </Container>
</Layout>

<style>
  .carousel-container {
    overflow: hidden;
    width: 80%;
    height: 400px;
    margin: 0 auto;
    position: relative;
  }

  .carousel {
    display: flex;
    transition: transform 0.5s ease-in-out;
    width: 100%;
    height: 100%;
  }

  .carousel img {
    width: 100%;
    height: 100%;
    object-fit: contain; /* Ajusta la imagen para que se ajuste dentro del contenedor */
    flex-shrink: 0;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const carousel = document.querySelector(".carousel");
    let index = 0;
    const totalImages = carousel.children.length;

    setInterval(() => {
      index = (index + 1) % totalImages;
      carousel.style.transform = `translateX(-${index * 100}%)`;
    }, 3000);
  });
</script>
